generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Application {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  dob       DateTime
  street    String
  city      String
  state     String
  zipCode   String
  vehicles  Vehicle[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id         Int      @id @default(autoincrement())
  applicationId Int
  VIN        String
  make       String
  model      String
  year       Int
  application Application @relation(fields: [applicationId], references: [id])

  @@unique([VIN]) //TODO - david maybe not necessary
}

